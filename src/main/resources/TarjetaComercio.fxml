<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="100" prefWidth="300" spacing="8" styleClass="tarjetaComercios" stylesheets="css/TarjetaComercio_styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TarjetaComercioController">
    <children>
        <ImageView fx:id="imageView" fitWidth="100" preserveRatio="true" />
        <Label fx:id="labelNombre" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="labelDireccion" style="-fx-font-size: 12; -fx-text-fill: #757575;" />
      <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
             <Button mnemonicParsing="false" text="Visitar tienda" styleClass="visitarTienda-button" onAction="#visitarTiendaAction"/>
         </children>
      </HBox>
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>

<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <!-- Almacenar la contraseña de administracion -->
    <class name="model.administracion" table="administracion">

        <meta attribute="class-description">
            Esta clase representa una valoración hecha por un usuario sobre un comercio, incluyendo una puntuación y un comentario.
        </meta>

        <!-- ID autogenerado en la base de datos -->
        <id name="idAdministracion" type="int" column="idAdministracion">
            <generator class="increment"/>
        </id>

        <property name="contrasenia" column="contrasenia" type="string"/>

    </class>

</hibernate-mapping>

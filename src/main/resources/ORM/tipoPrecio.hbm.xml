<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <!-- Tiene un mapeo de todas las variables que corresponden a las columnas de la base de datos -->
    <class name="model.tipoPrecio" table="tipoPrecio">

        <meta attribute="class-description">
            Esta clase representa los distintos tipos de precios que pueden asignarse a un producto (por unidad, por kilo, etc.).
        </meta>

        <!-- ID autogenerado en la base de datos -->
        <id name="idTipoPrecio" type="int" column="idTipoPrecio">
            <generator class="increment"/>
        </id>

        <property name="tipo" column="tipo" type="string" not-null="true"/>

    </class>

</hibernate-mapping>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="100" prefWidth="300" spacing="8" styleClass="tarjetaProducto" stylesheets="css/TarjetaProducto_styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TarjetaProductoController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <ImageView fx:id="imageView" fitHeight="100" preserveRatio="true" />

        <Label fx:id="labelNombre" styleClass="nombreProducto" />

        <Label fx:id="labelPrecio" styleClass="precioProducto" />

        <Label fx:id="labelComercio" styleClass="comercioProducto" />

        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="btnFavorito" styleClass="botonFavorito">
                <graphic>
                    <ImageView fx:id="iconoCorazon" fitHeight="16" fitWidth="16">
                  <image>
                     <Image url="@iconos/corazonBlanco.png" />
                  </image></ImageView>
                </graphic>
            </Button>
        </HBox>
    </children>
</VBox>
